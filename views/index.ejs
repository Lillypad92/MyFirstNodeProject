<html lang="en">
<%- include('./partials/head.ejs') %>

<body>

<%- include('./partials/nav.ejs') %>

    <div class="blogs-content">
        <h2>All Blogs</h2>

        <!--% is EJS, checking if blogs length is over zero = cykle through the blogs-->
        <% if (blogs.length > 0) { %>
            <!--Cykle through each blogs and called back function for each blog-->
            <% blogs.forEach(blog => { %>

                <h3 class="title"><%= blog.title %></h3>
                <p class="snippet"><%= blog.snippet %></p>
                
            <% }) %>
          <% } else { %>
            <p>There are no blogs to display...</p>
        <% } %>  
        

    </div>

    <%- include('./partials/footer.ejs') %>
</body>
</html>